<div class="container-new">
<h2>What kind of cargo<br>would you like to offer?</h2>
<%= simple_form_for @bike do |f| %>
      <div class="form-inputs">
        <%= f.input :model,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :bike_type,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :capacity,
                required: true,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :price,
                required: true,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :address,
                required: true,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :img_url %>
      </div>
      <div class="button-filled">
        <a><%= f.button :submit, "ADD A CARGO" %></a>
      </div>
<% end %>
</div>
